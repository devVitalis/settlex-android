<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Required permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".SettleXApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.SettleX">
        <activity
            android:name=".view.activities.PrivacyPolicyActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.TermsAndConditionsActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.AuthHelpActivity"
            android:exported="false" />
        <activity
            android:name=".view.auth.activity.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".view.auth.activity.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".view.auth.activity.PasscodeLoginActivity"
            android:exported="false" />
        <activity
            android:name=".controller.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.SettleX.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activities.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".view.Onboarding.activity.OnboardingActivity"
            android:exported="false" />
    </application>

</manifest>