<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Filled Button - Blue -->
    <style name="Widget.SettleXApp.Button.Filled.Blue" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/btn_filled_color_selector_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Filled Button - Blue, Rounded corners (8dp) -->
    <style name="Widget.SettleXApp.Button.Filled.Rounded8.Blue" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/btn_filled_color_selector_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearance">@style/SettleXApp.Rounded8</item>
    </style>

    <!-- Filled Button - Light Blue -->
    <style name="Widget.SettleXApp.Button.Filled.LightBlue" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/btn_filled_color_selector_light_blue</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Filled Button - Light Blue, Rounded corners (8dp) -->
    <style name="Widget.SettleXApp.Button.Filled.Rounded8.LightBlue" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/btn_filled_color_selector_light_blue</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearance">@style/SettleXApp.Rounded8</item>
    </style>

    <!-- Outlined Button -->
    <style name="Widget.SettleXApp.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/btn_outlined_text_color_selector</item>
        <item name="strokeColor">@color/btn_outlined_color_selector</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Shared Shape: Rounded corners (8dp) -->
    <style name="SettleXApp.Rounded8" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">8dp</item>
    </style>

    <!-- CheckBox -->
    <style name="Widget.SettleXApp.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/checkbox_color_selector_blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- TextInputLayout - Outlined -->
    <style name="Widget.SettleXApp.TextInputLayout.Outlined" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color_selector</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="shapeAppearance">@style/SettleXApp.Rounded8</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="endIconTint">@color/gray_dark</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="hintTextColor">@color/text_input_layout_hint_color_selector</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Pin Box EditText (for OTP/PIN) -->
    <style name="Widget.SettleXApp.EditText.PinBox" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/bg_pin_box_edit_txt</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Bottom Navigation Active Indicator -->
    <style name="Widget.SettleX.BottomNavigation.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/blue_light</item>
    </style>

    <!-- BottomSheet Dialog -->
    <style name="Widget_SettleX_BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:backgroundTint">@android:color/white</item>
    </style>

</resources>