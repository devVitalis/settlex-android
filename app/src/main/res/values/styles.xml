<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Shape appearance -->
    <style name="ShapeAppearance.SettleX.Rounded.8dp" parent="ShapeAppearance.Material3.Corner.None">
        <item name="cornerSize">8dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearance.SettleX.Rounded.12dp" parent="ShapeAppearance.Material3.Corner.None">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.SettleX.Rounded.16dp" parent="ShapeAppearance.Material3.Corner.None">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.SettleX.Circular" parent="ShapeAppearance.Material3.Corner.None">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.SettleX.Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/btn_bg_primary_selector</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="rippleColor">@color/colorRippleOverlay</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.SettleX.Button.Primary.Rounded8" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/btn_bg_primary_selector</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:includeFontPadding">false</item>
        <item name="rippleColor">@color/colorRippleOverlay</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearance">@style/ShapeAppearance.SettleX.Rounded.8dp</item>
    </style>

    <style name="Widget.SettleX.Button.Secondary" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="rippleColor">@color/colorRippleOverlay</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.SettleX.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:includeFontPadding">false</item>
        <item name="rippleColor">@color/colorRippleOverlay</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.SettleX.Action.Button.Rounded8" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/colorScrimOverlay</item>
        <item name="android:includeFontPadding">false</item>
        <item name="rippleColor">@color/colorRippleOverlay</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="iconTint">@color/colorOnScrimOverlay</item>
        <item name="android:textColor">@color/colorOnScrimOverlay</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearance">@style/ShapeAppearance.SettleX.Rounded.8dp</item>
    </style>

    <style name="Widget.SettleX.Button.KeyPad" parent="Widget.Material3.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="backgroundTint">@null</item>
        <item name="rippleColor">@color/colorRippleOverlay</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/bg_numeric_keypad</item>
    </style>

    <!-- Check box -->
    <style name="Widget.SettleX.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/checkbox_color_selector</item>
    </style>

    <!-- TextInputLayout  -->
    <style name="Widget.SettleX.TextInputLayout.Outlined" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/colorSurface</item>
        <item name="boxStrokeColor">@color/til_outline_color_selector</item>
        <item name="strokeWidth">2dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.SettleX.Rounded.8dp</item>
        <item name="boxStrokeErrorColor">@color/colorError</item>
        <item name="endIconTint">@color/colorOnSurfaceVariant</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textColorHint">@color/colorOnSurfaceVariant</item>
        <item name="hintTextColor">@color/til_hint_color_selector</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- EditText  -->
    <style name="Widget.SettleX.TextInputEditText.Outlined" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:includeFontPadding">false</item>
        <item name="hintTextColor">@color/colorOnSurfaceVariant</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingHorizontal">15sp</item>
    </style>

    <!-- TextView -->
    <style name="TextAppearance.SettleX.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="background">?attr/selectableItemBackground</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.SettleX.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="background">?attr/selectableItemBackground</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.SettleX.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="background">?attr/selectableItemBackground</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.SettleX.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="background">?attr/selectableItemBackground</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.SettleX.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="background">?attr/selectableItemBackground</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.SettleX.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="background">?attr/selectableItemBackground</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.SettleX.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="background">?attr/selectableItemBackground</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.SettleX.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">12sp</item>
        <item name="background">?attr/selectableItemBackground</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Pin box (for OTP/PIN) -->
    <style name="Widget.SettleX.PinView" parent="PinWidget.PinView">
        <item name="itemCount">4</item>
        <item name="itemSpacing">10dp</item>
        <item name="viewType">rectangle</item>
        <item name="itemRadius">8dp</item>
        <item name="android:cursorVisible">true</item>
        <item name="cursorColor">@color/colorOnSurface</item>
        <item name="lineColor">@color/pin_input_outline_selector</item>
        <item name="lineWidth">1.5dp</item>
        <item name="android:itemBackground">@drawable/pin_input_bg</item>
        <item name="itemWidth">48dp</item>
        <item name="itemHeight">48dp</item>
    </style>

    <!-- Shimmer FrameLayout -->
    <style name="Widget.SettleX.ShimmerFrameLayout" parent="">
        <item name="shimmer_auto_start">true</item>
        <item name="shimmer_duration">1500</item>
    </style>

    <!-- Bottom navigation -->
    <style name="Widget.SettleX.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:minHeight">72dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.SettleX.BottomNavigation.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/colorSecondary</item>
    </style>

    <!-- Progress indicator -->
    <style name="Widget.SettleX.AppCompat.CircularProgressBar." parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>

    <style name="Widget.SettleX.StepProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">@color/colorPrimary</item>
        <item name="trackColor">@color/colorSurfaceVariant</item>
        <item name="trackThickness">4dp</item>"
        <item name="android:max">4</item>
        <item name="indicatorSize">35dp</item>
    </style>

    <!-- Dialog fragment -->
    <style name="Theme_SettleX_Dialog_Transparent" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- Dialog and Bottom Sheet -->
    <style name="Theme_SettleX_Dialog_BottomSheet" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:backgroundTint">@color/colorSurface</item>
    </style>

    <style name="Theme_SettleX_Dialog_Alert" parent="MaterialAlertDialog.Material3">
        <item name="android:backgroundTint">@color/colorSurface</item>
    </style>

    <style name="Theme_SettleX_Dialog_Alert_Rounded16dp" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.SettleX.Rounded.16dp</item>
    </style>

    <!-- Card view -->
    <style name="Widget.SettleX.CardView.Filled.Small" parent="Widget.Material3.CardView.Filled">
        <item name="cardElevation">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.SettleX.Rounded.8dp</item>
    </style>

    <style name="Widget.SettleX.CardView.Filled.Medium" parent="Widget.Material3.CardView.Filled">
        <item name="cardElevation">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.SettleX.Rounded.16dp</item>
    </style>
</resources>