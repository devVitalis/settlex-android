<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Shape appearance -->
    <style name="Rounded_Shape_8dp">
        <item name="cornerSize">8dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Rounded_Shape_16dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Oval_Shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Buttons -->
    <style name="DefaultButton.Filled.Blue" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/btn_filled_color_selector_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Filled.Gradient" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/btn_gradient_blue</item>
        <item name="backgroundTint">@null</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Filled.Rounded8.Blue" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/btn_filled_color_selector_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearance">@style/Rounded_Shape_8dp</item>
    </style>

    <style name="Button.Filled.Tonal.BlueLight" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/btn_filled_color_selector_light_blue</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Filled.Tonal.Rounded8.BlueLight" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/btn_filled_color_selector_light_blue</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearance">@style/Rounded_Shape_8dp</item>
    </style>

    <style name="Button.Outlined.Blue" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/btn_outlined_text_color_selector</item>
        <item name="strokeColor">@color/btn_outlined_color_selector</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Numeric.KeyPad" parent="Widget.Material3.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@null</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/bg_numeric_keypad</item>
    </style>

    <!-- CheckBox -->
    <style name="Widget.SettleXApp.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/checkbox_color_selector_blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- TextInputLayout, Outlined -->
    <style name="MyTextInputLayoutThemeOutlined" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color_selector</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="shapeAppearance">@style/Rounded_Shape_8dp</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="endIconTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="hintTextColor">@color/text_input_layout_hint_color_selector</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Pin Box EditText (for OTP/PIN) -->
    <style name="Widget.SettleXApp.EditText.PinBox" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/bg_pin_box_edit_txt</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.SettleXApp.EditText.PinBox.GrayLight" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/bg_pin_box_edit_txt_gray_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MyPinBox.Gray.Light" parent="PinWidget.PinView">
        <item name="itemCount">4</item>
        <item name="itemSpacing">10dp</item>
        <item name="viewType">rectangle</item>
        <item name="itemRadius">8dp</item>
        <item name="android:cursorVisible">false</item>
        <item name="lineColor">@color/pin_box_line_color_selector</item>
        <item name="lineWidth">1.5dp</item>
        <item name="android:itemBackground">@drawable/pin_box_bg_color_selector</item>
        <item name="itemWidth">48dp</item>
        <item name="itemHeight">48dp</item>
    </style>

    <!-- Bottom Navigation Active Indicator -->
    <style name="Widget.SettleX.BottomNavigation.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/blue_light</item>
    </style>

    <!-- Bottom Navigation - Override height -->
    <style name="Widget.SettleX.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:minHeight">72dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Disable dialog fragment bg DIM -->
    <style name="TransparentDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- CardView -->
    <style name="Widget.SettleX.CardView.Oval.Elevated" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">5dp</item>
        <item name="shapeAppearance">@style/Oval_Shape</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <!-- Progress Indicator -->
    <style name="Widget.SettleX.CircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
        <item name="trackColor">@color/gray</item>
        <item name="indicatorColor">@color/blue</item>
        <item name="android:indeterminate">true</item>
    </style>

    <!-- Dialog's -->
    <style name="MyBottomSheetDialogTheme" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:backgroundTint">@android:color/white</item>
    </style>

    <style name="MyAlertDialogTheme" parent="MaterialAlertDialog.Material3">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="CustomMaterialDialog" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearanceOverlay">@style/Rounded_Shape_16dp</item>
    </style>
</resources>