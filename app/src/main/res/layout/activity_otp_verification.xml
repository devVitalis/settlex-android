<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSurface"
    android:fitsSystemWindows="true"
    tools:context=".presentation.auth.forgot_password.OtpVerificationActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_ios_back"
        app:navigationIconTint="@color/colorOnSurface"
        app:title="@string/title_otp_verification"
        app:titleTextAppearance="@style/TextAppearance.SettleX.TitleLarge" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/ll_bottom_actions"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_otp_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="@drawable/bg_sec_filled_pri_outlined_oval"
                android:src="@drawable/ic_security"
                app:contentPadding="10dp"
                app:tint="@color/colorOnSecondary" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextAppearance.SettleX.HeadlineLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:text="@string/subtitle_enter_code"
                android:textAlignment="center"
                android:textColor="@color/colorOnSurface" />

            <TextView
                android:id="@+id/tv_info"
                style="@style/TextAppearance.SettleX.BodyLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:textColor="@color/colorOnSurfaceVariant"
                tools:text="We sent a verification code to your email app***d@gmail.com" />

            <com.chaos.view.PinView
                android:id="@+id/otp_view"
                style="@style/Widget.SettleX.PinView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:inputType="number"
                app:itemCount="6"
                app:itemHeight="50dp"
                app:itemWidth="50dp" />

            <TextView
                android:id="@+id/tv_otp_feedback"
                style="@style/TextAppearance.Material3.BodyMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorError"
                android:visibility="gone"
                tools:text="Invalid OTP" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/resend_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/TextAppearance.Material3.BodyMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_didnt_receive_the_code"
                android:textColor="@color/colorOnSurface" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_resend_otp"
                style="@style/Widget.SettleX.Button.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:text="@string/btn_resend" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm"
            style="@style/Widget.SettleX.Button.Primary.Rounded8"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:enabled="false"
            android:text="@string/btn_confirm" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
