<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".ui.auth.components.OtpVerificationActivity">

    <!--Header-->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/imgBackBefore"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:contentDescription="Arrow Back"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_arrow_back" />

        <LinearLayout
            android:id="@+id/btnHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_24dp_blue"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:contentDescription="Help"
                android:src="@drawable/ic_help" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:includeFontPadding="false"
                android:text="Help"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <!--ScrollView Layout-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:background="@color/gray_light"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15dp">

            <!--Container-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/bg_8dp_white"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:includeFontPadding="false"
                    android:text="Fill in the Box with the OTP"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <!--Container for Message and Icon-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/txtInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/poppins_regular"
                        android:includeFontPadding="false"
                        android:text="Please check the OTP that\nhas been sent to your email account:"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtUserEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtInfo"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/poppins_regular"
                        android:includeFontPadding="false"
                        android:text="be****k@gmail.com"
                        android:textColor="@color/blue"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_otp_verification"
                        app:tint="@color/blue" />
                </RelativeLayout>
            </LinearLayout>

            <!--Enter OTP field-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <com.settlex.android.ui.custom.PinBoxEditText
                    android:id="@+id/otpDigit1"
                    style="@style/Widget.SettleXApp.EditText.PinBox"
                    android:inputType="number"
                    android:maxLength="1" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <com.settlex.android.ui.custom.PinBoxEditText
                    android:id="@+id/otpDigit2"
                    style="@style/Widget.SettleXApp.EditText.PinBox"
                    android:inputType="number"
                    android:maxLength="1" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <com.settlex.android.ui.custom.PinBoxEditText
                    android:id="@+id/otpDigit3"
                    style="@style/Widget.SettleXApp.EditText.PinBox"
                    android:inputType="number"
                    android:maxLength="1" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <com.settlex.android.ui.custom.PinBoxEditText
                    android:id="@+id/otpDigit4"
                    style="@style/Widget.SettleXApp.EditText.PinBox"
                    android:inputType="number"
                    android:maxLength="1" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <com.settlex.android.ui.custom.PinBoxEditText
                    android:id="@+id/otpDigit5"
                    style="@style/Widget.SettleXApp.EditText.PinBox"
                    android:inputType="number"
                    android:maxLength="1" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <com.settlex.android.ui.custom.PinBoxEditText
                    android:id="@+id/otpDigit6"
                    style="@style/Widget.SettleXApp.EditText.PinBox"
                    android:inputType="number"
                    android:maxLength="1" />
            </LinearLayout>

            <!--Success/Failure TxT-->
            <TextView
                android:id="@+id/txtOtpFeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_light"
                android:includeFontPadding="false"
                android:text="message"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:visibility="gone" />

            <!--Container-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:includeFontPadding="false"
                    android:text="Didn't receive the OTP?"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <!--Resend (OTP) Btn-->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnResendOtp"
                    style="@style/Widget.SettleXApp.Button.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingHorizontal="0dp"
                    android:paddingVertical="0dp"
                    android:text="Resend"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtOtpInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_8dp_light_blue"
                android:drawablePadding="2dp"
                android:fontFamily="@font/poppins_regular"
                android:includeFontPadding="false"
                android:padding="10dp"
                android:text="For your security, do not disclose this code to anyone; even if they claim to be from SettleX."
                android:textColor="@color/gray_dark"
                android:textSize="11sp"
                app:drawableStartCompat="@drawable/ic_shield_check_protection"
                app:drawableTint="@color/blue" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirm"
                style="@style/Widget.SettleXApp.Button.Filled.Rounded8.Blue"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:enabled="false"
                android:text="Confirm" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>