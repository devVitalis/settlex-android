<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Onboarding.fragment.OnboardingPage1Fragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:text="PAY BILLS WITHOUT STRESS"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_oval_light_blue">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_intro_slide_1"
            android:layout_width="290dp"
            android:layout_height="290dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_intro_slide_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Handle your electricity, airtime, internet, and more all in one place. Fast, secure, and stress-free bill payments at your fingertips.."
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>
