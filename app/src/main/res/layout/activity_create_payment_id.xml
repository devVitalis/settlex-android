<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fitsSystemWindows="true"
    tools:context=".presentation.settings.CreatePaymentIdActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:paddingTop="50dp">

            <TextView
                style="@style/Widget.SettleX.TextBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_create_your_payment_id" />

            <TextView
                style="@style/Widget.SettleX.TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/tv_this_id_lets_others_send_you_money_securely_on_settlex_once_created_it_can_t_be_changed"
                android:textColor="@color/colorOnSurfaceVariant" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_payment_id"
                style="@style/Widget.SettleX.TextInputEditText.Outlined"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_input_field_outlined"
                android:hint="@string/hint_choose_your_payment_id"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:paddingHorizontal="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_payment_id_availability_status"
                    style="@style/Widget.SettleX.TextRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorSuccess"
                    android:visibility="gone"
                    tools:text="Available" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_payment_id_available"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_check_circle"
                    android:visibility="gone"
                    app:tint="@color/colorSuccess" />

                <ProgressBar
                    android:id="@+id/pb_payment_id_check"
                    style="@style/Widget.SettleX.AppCompat.CircularProgressBar."
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="gone" />
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_rule_start_with"
                style="@style/Widget.SettleX.TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_surface_rounded8"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="@string/tv_starts_with_a_letter"
                android:textColor="@color/colorOnSurfaceVariant"
                app:drawableStartCompat="@drawable/ic_check"
                app:drawableTint="@color/colorOnSurfaceVariant" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_rule_length"
                style="@style/Widget.SettleX.TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_surface_rounded8"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="@string/tv_min_amp_max_5_20_characters"
                android:textColor="@color/colorOnSurfaceVariant"
                app:drawableStartCompat="@drawable/ic_check"
                app:drawableTint="@color/colorOnSurfaceVariant" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_rule_contains"
                style="@style/Widget.SettleX.TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_surface_rounded8"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="@string/tv_only_lowercase_letters_numbers_and_no_space"
                android:textColor="@color/colorOnSurfaceVariant"
                app:drawableStartCompat="@drawable/ic_check"
                app:drawableTint="@color/colorOnSurfaceVariant" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_continue"
                style="@style/Widget.SettleX.Button.Primary.Rounded8"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:enabled="false"
                android:text="@string/btn_continue" />

            <TextView
                android:id="@+id/tv_error"
                style="@style/Widget.SettleX.TextError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textAlignment="center"
                android:visibility="gone"
                tools:text="Error message" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>