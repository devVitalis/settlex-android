<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        style="@style/Widget.SettleX.TextBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/tv_payment_confirmation" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@drawable/ic_close"
        app:tint="@color/colorOnSurfaceVariant" />

    <TextView
        android:id="@+id/tv_transfer_amount_header"
        style="@style/Widget.SettleX.TextBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text="₦100,000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/Widget.SettleX.TextRegular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:text="@string/tv_recipient"
            android:textColor="@color/colorOnSurfaceVariant" />

        <TextView
            android:id="@+id/tv_recipient_payment_id"
            style="@style/Widget.SettleX.TextRegular"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="\@vitalis" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/Widget.SettleX.TextRegular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="@string/tv_recipient_name"
            android:textColor="@color/colorOnSurfaceVariant" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_recipient_profile_photo"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginEnd="3dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.SettleX.Circular"
            app:srcCompat="@drawable/ic_no_profile_photo" />

        <TextView
            android:id="@+id/tv_recipient_name"
            style="@style/Widget.SettleX.TextRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="BENJAMIN CHISOM NNAEMEKA" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/Widget.SettleX.TextRegular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="@string/tv_amount"
            android:textColor="@color/colorOnSurfaceVariant" />

        <TextView
            android:id="@+id/tv_transfer_amount"
            style="@style/Widget.SettleX.TextRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="₦100,000.00" />
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="7.5dp"
        app:dividerColor="@color/divider_color"
        app:dividerThickness="0.5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/Widget.SettleX.TextRegular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tv_payment_method" />

        <TextView
            android:id="@+id/tv_payment_method"
            style="@style/Widget.SettleX.TextRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="ALL" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_surface_rounded8"
        android:orientation="vertical"
        android:paddingVertical="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <TextView
                style="@style/Widget.SettleX.TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/tv_available_balance" />

            <TextView
                android:id="@+id/tv_sender_total_balance"
                style="@style/Widget.SettleX.TextRegular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="(₦198,535.57)" />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check"
                app:tint="@color/colorSuccess" />
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            app:dividerColor="@color/divider_on_color_surface"
            app:dividerThickness="1.5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <TextView
                style="@style/Widget.SettleX.TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/tv_wallet_balance"
                android:textColor="@color/colorOnSurfaceVariant"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_sender_wallet_balance"
                style="@style/Widget.SettleX.TextRegular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorOnSurfaceVariant"
                android:textSize="12sp"
                tools:text="(₦198,000.32)" />

            <TextView
                android:id="@+id/tv_debit_from_sender_wallet_balance"
                style="@style/Widget.SettleX.TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="-₦5,230.00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <TextView
                style="@style/Widget.SettleX.TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/tv_commission_balance"
                android:textColor="@color/colorOnSurfaceVariant"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_sender_commission_balance"
                style="@style/Widget.SettleX.TextRegular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorOnSurfaceVariant"
                android:textSize="12sp"
                tools:text="(₦535.25)" />

            <TextView
                android:id="@+id/tv_debit_from_sender_commission_balance"
                style="@style/Widget.SettleX.TextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="-₦10,230.00" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_feedback"
        style="@style/Widget.SettleX.TextRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/colorError"
        android:visibility="gone"
        tools:text="Insufficient Balance" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirm_transfer"
        style="@style/Widget.SettleX.Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:enabled="false"
        android:text="@string/btn_confirm_transfer"
        android:textSize="15sp" />
</LinearLayout>