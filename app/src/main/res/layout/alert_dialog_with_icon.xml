<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_secondary_oval"
        android:src="@drawable/ic_lock_filled"
        app:contentPadding="10dp"
        app:tint="@color/colorPrimary" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/Widget.SettleX.TextBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textAlignment="center"
        tools:text="Dialog Title" />

    <TextView
        android:id="@+id/tv_message"
        style="@style/Widget.SettleX.TextRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textAlignment="center"
        tools:text="Dialog Message" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_secondary"
            style="@style/Widget.SettleX.Button.Secondary"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            tools:text="Secondary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_primary"
            style="@style/Widget.SettleX.Button.Primary"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            tools:text="Primary" />
    </LinearLayout>
</LinearLayout>
