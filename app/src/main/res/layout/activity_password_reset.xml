<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.auth.activity.PasswordResetActivity">

    <RelativeLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Header-->
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/imgBackBefore"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:contentDescription="Arrow Back"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_arrow_back" />
        </RelativeLayout>

        <!--Scroll Layout-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btnContainer"
            android:layout_below="@+id/header"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="15dp">

                <!--TxT-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/poppins_regular"
                    android:includeFontPadding="false"
                    android:text="Forgot Password"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/poppins_light"
                    android:includeFontPadding="false"
                    android:text="Lets help you reset your password"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_8dp_light_gray"
                    android:fontFamily="@font/poppins_light"
                    android:includeFontPadding="false"
                    android:padding="5dp"
                    android:text="Please enter a valid email address linked to your account. An OTP will be sent to this address."
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <!--Email Section Header (INVISIBLE)-->
                <TextView
                    android:id="@+id/emailSectionHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins_light"
                    android:includeFontPadding="false"
                    android:text="Email address"
                    android:textColor="@color/gray_dark"
                    android:textSize="14sp"
                    android:visibility="invisible" />

                <!--Email Field-->
                <RelativeLayout
                    android:id="@+id/editTxtEmailBg"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/bg_edit_txt_custom_white_not_focused"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <!-- Phone Number Input -->
                    <EditText
                        android:id="@+id/editTxtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Enter your email address"
                        android:includeFontPadding="false"
                        android:inputType="textEmailAddress"
                        android:paddingHorizontal="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="14sp" />
                </RelativeLayout>

                <!--Display Error TxT - Hidden-->
                <TextView
                    android:id="@+id/txtErrorInfoEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins_light"
                    android:includeFontPadding="false"
                    android:text="message"
                    android:textColor="@color/red"
                    android:textSize="11sp"
                    android:visibility="gone" />
            </LinearLayout>
        </ScrollView>

        <!--Footer-->
        <LinearLayout
            android:id="@+id/btnContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:paddingVertical="25dp">

            <!--Reset Btn-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnResetPassword"
                style="@style/Widget.SettleXApp.Button.Filled.Rounded8.Blue"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:enabled="false"
                android:text="Reset Password"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <include
        layout="@layout/progressbar_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>