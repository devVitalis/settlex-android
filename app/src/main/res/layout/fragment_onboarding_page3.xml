<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.Onboarding.fragment.OnboardingPage3Fragment">

    <LinearLayout
        android:id="@+id/imageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_oval_light_blue">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ImgIntroSlide3"
            android:layout_width="295dp"
            android:layout_height="295dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_intro_slide_3" />
    </LinearLayout>

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_medium"
        android:includeFontPadding="false"
        android:text="header"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="We safeguard your personal data with bank-level encryption to ensure it stays private and secure."
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="15sp" />
</RelativeLayout>