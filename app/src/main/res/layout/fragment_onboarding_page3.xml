<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Onboarding.fragment.OnboardingPage3Fragment">

    <LinearLayout
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_oval_light_blue">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_intro_slide_3"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_intro_slide_3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="SECURE BY DESIGN"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="We safeguard your personal data with bank-level encryption to ensure it stays private and secure."
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>
