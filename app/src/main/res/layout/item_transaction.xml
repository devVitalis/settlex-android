<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="15dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_txn_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_service_oval"
        android:src="@drawable/ic_service_payment_sent"
        android:tint="?attr/colorPrimary"
        app:contentPadding="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_service_type_name"
                style="@style/TextAppearance.SettleX.BodyMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?attr/colorOnSurface"
                tools:text="Payment Sent" />

            <TextView
                android:id="@+id/tv_txn_operation"
                style="@style/TextAppearance.SettleX.BodyMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                tools:text="-" />

            <TextView
                android:id="@+id/tv_txn_amount"
                style="@style/TextAppearance.SettleX.BodyMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textStyle="bold"
                tools:text="â‚¦500,000.00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_txn_date_time"
                style="@style/TextAppearance.SettleX.BodySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="Aug 28, 3:39 AM" />

            <View
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/bg_on_surface_variant_circle" />

            <TextView
                android:id="@+id/tv_recipient_or_sender"
                style="@style/TextAppearance.SettleX.BodySmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="NNAEMEKA BENJAMIN CHISOM" />

            <TextView
                android:id="@+id/tv_txn_status"
                style="@style/TextAppearance.SettleX.BodySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_label_status_success"
                android:maxLines="1"
                android:paddingHorizontal="5dp"
                android:textColor="?attr/colorOnSuccessContainer"
                android:textSize="11sp"
                tools:text="Successful" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>