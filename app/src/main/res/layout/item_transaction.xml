<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_txn_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_secondary_oval"
            android:src="@drawable/ic_service_payment_sent"
            android:tint="@color/colorPrimary"
            app:contentPadding="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_service_type_name"
                    style="@style/Widget.SettleX.TextMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="13sp"
                    tools:text="Payment Sent" />

                <TextView
                    android:id="@+id/tv_txn_operation"
                    style="@style/Widget.SettleX.TextMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorError"
                    android:textSize="13sp"
                    tools:text="-" />

                <TextView
                    android:id="@+id/tv_txn_amount"
                    style="@style/Widget.SettleX.TextMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:text="â‚¦500,000.00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_txn_date_time"
                    style="@style/Widget.SettleX.TextMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/colorOnSurfaceVariant"
                    android:textSize="11sp"
                    tools:text="Aug 28, 3:39 AM" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="3dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/bg_oval_gray" />

                <TextView
                    android:id="@+id/recipient_or_sender"
                    style="@style/Widget.SettleX.TextMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="25dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/colorOnSurfaceVariant"
                    android:textSize="11sp"
                    tools:text="NNAEMEKA BENJAMIN CHISOM" />

                <TextView
                    android:id="@+id/tv_txn_status"
                    style="@style/Widget.SettleX.TextMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_success_container_rounded3"
                    android:maxLines="1"
                    android:paddingHorizontal="5dp"
                    android:textColor="@color/colorOnSuccessContainer"
                    android:textSize="9sp"
                    tools:text="Successful" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--Divider-->
    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerColor="@color/divider_color"
        app:dividerThickness="1.5dp" />
</LinearLayout>