<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true"
    tools:context=".presentation.dashboard.account.ProfileActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_ios_back"
        app:navigationIconTint="?attr/colorOnSurface"
        app:title="@string/tv_my_profile"
        app:titleTextAppearance="@style/TextAppearance.SettleX.TitleLarge" />

    <!-- Scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/colorSurfaceDim"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:paddingVertical="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_surface_rounded8"
                android:orientation="vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="15dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_profile_photo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.SettleX.Circular"
                        app:srcCompat="@drawable/ic_no_profile_photo" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/btn_change_profile_pic"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom|end"
                        android:background="@drawable/bg_scrim_oval"
                        android:src="@drawable/ic_camera"
                        app:contentPadding="5dp"
                        app:tint="?attr/colorOnScrimOverlay" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_error"
                    style="@style/TextAppearance.SettleX.BodyMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="?attr/colorError"
                    android:visibility="gone"
                    tools:text="Upload failed" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextAppearance.SettleX.BodyMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/tv_payment_id"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_payment_id"
                        style="@style/TextAppearance.SettleX.BodyMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="16sp"
                        tools:text="\@vitalis" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/btn_copy_payment_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_copy"
                        app:tint="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_surface_rounded8"
                android:orientation="vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextAppearance.SettleX.BodyMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/tv_full_name"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/tv_full_name"
                        style="@style/TextAppearance.SettleX.BodyMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAlignment="viewEnd"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="BENJAMIN NNAEMEKA" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextAppearance.SettleX.BodyMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_phone_number"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/tv_phone_number"
                        style="@style/TextAppearance.SettleX.BodyMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAlignment="viewEnd"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="+2347055606507" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextAppearance.SettleX.BodyMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_email_address"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/tv_email"
                        style="@style/TextAppearance.SettleX.BodyMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAlignment="viewEnd"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="c**s@gmail.com" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextAppearance.SettleX.BodyMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/tv_member_since"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/tv_joined_date"
                        style="@style/TextAppearance.SettleX.BodyMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAlignment="viewEnd"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="2 years ago" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_member_since_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_info_outline"
                        app:tint="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>