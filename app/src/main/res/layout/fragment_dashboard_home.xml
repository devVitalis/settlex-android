<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.dashboard.fragment.home.fragment.HomeDashboardFragment">

    <!--Parent Container-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--Header-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingTop="5dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btnProfilePic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_avatar_default"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearance="@style/Oval_Shape" />

            <LinearLayout
                android:id="@+id/greetingContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/btnProfilePic"
                app:layout_constraintStart_toEndOf="@id/btnProfilePic"
                app:layout_constraintTop_toTopOf="@id/btnProfilePic">

                <TextView
                    android:id="@+id/greeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:includeFontPadding="false"
                    android:text="Hello ðŸ‘‹"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@id/fullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_regular"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="Nnaemeka Benjamin" />

                    <!-- Shimmer user fullName -->
                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/userFullNameShimmer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:visibility="gone"
                        app:shimmer_auto_start="false"
                        app:shimmer_duration="1500">

                        <View
                            android:layout_width="150dp"
                            android:layout_height="14sp"
                            android:background="@drawable/bg_8dp_gray_whitish" />
                    </com.facebook.shimmer.ShimmerFrameLayout>
                </FrameLayout>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                style="@style/Widget.SettleXApp.Button.Outlined"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:paddingHorizontal="0dp"
                android:text="Login"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/profilePic"
                app:layout_constraintStart_toEndOf="@id/profilePic"
                app:layout_constraintTop_toTopOf="@id/profilePic" />

            <FrameLayout
                android:id="@+id/btnSupport"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_oval_semi_transparent_black10"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/btnNotification"
                app:layout_constraintEnd_toStartOf="@+id/btnNotification"
                app:layout_constraintTop_toTopOf="@id/btnNotification">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:contentDescription="Support Agent"
                    android:src="@drawable/ic_support_agent" />
            </FrameLayout>

            <!--Notification Layout-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnNotification"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_oval_semi_transparent_black10"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Bell Icon -->
                <ImageView
                    android:id="@+id/notification"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="Notification"
                    android:src="@drawable/ic_notifications"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Red Badge -->
                <TextView
                    android:id="@+id/unreadNotificationBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_oval_red"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:minWidth="12dp"
                    android:minHeight="12dp"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    app:layout_constraintEnd_toEndOf="@id/notification"
                    app:layout_constraintTop_toTopOf="@id/notification" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--Scroll Layout-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp">

                <!--Marquee Container-->
                <LinearLayout
                    android:id="@+id/marqueeContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_8dp_orange_light"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="2dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_brand_awareness"
                        app:tint="@color/orange" />

                    <TextView
                        android:id="@+id/marqueeTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/poppins_regular"
                        android:includeFontPadding="false"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="Network Issue Alert: Airtime purchases are currently unavailable due to a service outage. We're working urgently to fix this."
                        android:textColor="@color/orange"
                        android:textSize="12sp" />
                </LinearLayout>

                <!--Wallet Layout-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_16dp_gradient"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <!-- Header Row -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="Wallet"
                        android:textColor="@color/gray_whitish"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Balance Section -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <ImageView
                            android:id="@+id/protection"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_shield_protection"
                            app:tint="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/balanceTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:includeFontPadding="false"
                            android:text="Balance"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@id/protection"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/btnBalanceToggle"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginStart="5dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:contentDescription="Hide Balance"
                            android:focusable="true"
                            android:src="@drawable/ic_visibility_on"
                            app:layout_constraintStart_toEndOf="@id/balanceTitle"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/white" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:layout_constraintStart_toStartOf="@id/protection"
                            app:layout_constraintTop_toBottomOf="@id/balanceTitle">

                            <TextView
                                android:id="@+id/userBalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:includeFontPadding="false"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                tools:text="â‚¦2,500.00" />

                            <com.facebook.shimmer.ShimmerFrameLayout
                                android:id="@+id/userBalanceShimmer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:visibility="gone"
                                app:shimmer_auto_start="false"
                                app:shimmer_duration="1500">

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="15dp"
                                    android:background="@drawable/bg_8dp_gray_whitish" />
                            </com.facebook.shimmer.ShimmerFrameLayout>
                        </FrameLayout>

                        <!-- Commission stack -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="80dp"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="Commission"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">

                                <LinearLayout
                                    android:id="@+id/btnUserCommissionBalanceLayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/userCommissionBalance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:includeFontPadding="false"
                                        android:textColor="@color/white"
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        tools:text="â‚¦534.18" />

                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:layout_marginStart="2dp"
                                        android:contentDescription="@null"
                                        android:src="@drawable/ic_arrow_forward"
                                        app:tint="@color/white" />
                                </LinearLayout>

                                <com.facebook.shimmer.ShimmerFrameLayout
                                    android:id="@+id/userCommissionBalanceShimmer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:visibility="gone"
                                    app:shimmer_auto_start="false"
                                    app:shimmer_duration="1500">

                                    <TextView
                                        android:layout_width="70dp"
                                        android:layout_height="15dp"
                                        android:background="@drawable/bg_8dp_gray_whitish" />
                                </com.facebook.shimmer.ShimmerFrameLayout>
                            </FrameLayout>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Action Buttons -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/actionButtons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <!-- Add Money -->
                        <LinearLayout
                            android:id="@+id/btnAddMoney"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_8dp_transparent_white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingVertical="3dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_add" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:includeFontPadding="false"
                                android:text="Add Funds"
                                android:textColor="@color/white"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <!-- Receive Money -->
                        <LinearLayout
                            android:id="@+id/btnReceiveMoney"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_8dp_transparent_white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingVertical="3dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_receive" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:includeFontPadding="false"
                                android:text="Get Paid"
                                android:textColor="@color/white"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <!-- Send Money -->
                        <LinearLayout
                            android:id="@+id/btnPayAFriend"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_8dp_transparent_white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingVertical="3dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_send" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:includeFontPadding="false"
                                android:text="Pay a Friend"
                                android:textColor="@color/white"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                <!--Money flow (Hidden) -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/moneyFlowContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_8dp_white_ripple_yes"
                    android:padding="8dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txtMoneyFlow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:includeFontPadding="false"
                        android:text="Money Flow"
                        android:textColor="@color/gray"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:id="@+id/icInFlow"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_inflow"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtMoneyFlow" />

                    <ImageView
                        android:id="@+id/icOutFlow"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_outflow"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/icInFlow" />

                    <LinearLayout
                        android:id="@+id/flowContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="@id/icOutFlow"
                        app:layout_constraintStart_toEndOf="@id/icInFlow"
                        app:layout_constraintTop_toTopOf="@id/icInFlow">

                        <TextView
                            android:id="@+id/inFlow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:text="N200,000.00" />

                        <TextView
                            android:id="@+id/outFlow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:includeFontPadding="false"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:text="N200,000.00" />
                    </LinearLayout>

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/moneyFlowPieChart"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/flowContainer"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- connection lost layout (Hidden) -->
                <LinearLayout
                    android:id="@+id/connectionLost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_8dp_white_ripple_yes"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_regular"
                        android:includeFontPadding="false"
                        android:text="@string/error_no_internet"
                        android:textColor="@color/gray_dark"
                        android:textSize="12sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRetry"
                        style="@style/Widget.SettleXApp.Button.Outlined"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp"
                        android:paddingHorizontal="0dp"
                        android:text="Retry"
                        android:textSize="12sp" />

                </LinearLayout>

                <!--Services-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/serviceRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_16dp_white"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:padding="8dp" />

                <!--Recent Transaction-->
                <LinearLayout
                    android:id="@+id/transactionContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_16dp_white"
                    android:orientation="vertical"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_regular"
                            android:includeFontPadding="false"
                            android:text="Recent Transactions"
                            android:textColor="@color/gray"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/btnViewAllTransaction"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="4dp"
                            android:fontFamily="@font/poppins_regular"
                            android:includeFontPadding="false"
                            android:text="View ALL"
                            android:textColor="@color/gray"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/gray" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/transactionRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:nestedScrollingEnabled="false"
                            android:visibility="visible" />

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/txnShimmerEffect"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:shimmer_auto_start="false"
                            app:shimmer_duration="1500">

                            <include
                                layout="@layout/item_transaction_shimmer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.facebook.shimmer.ShimmerFrameLayout>
                    </FrameLayout>
                </LinearLayout>

                <!--Promotion-->
                <FrameLayout
                    android:id="@+id/promoBannerContainer"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_16dp_white"
                    android:visibility="gone">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/promoViewPager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <!-- Loading Progress bar -->
                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/promoProgressBar"
                        style="@style/Widget.SettleX.CircularProgressIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <!--Dots Indicator-->
                    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                        android:id="@+id/dotsIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="10dp"
                        app:dotsColor="@color/gray"
                        app:dotsSize="6dp"
                        app:dotsSpacing="2dp"
                        app:dotsWidthFactor="2.5"
                        app:progressMode="false"
                        app:selectedDotColor="@color/blue" />
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>