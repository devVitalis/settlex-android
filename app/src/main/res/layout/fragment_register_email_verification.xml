<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true"
    tools:context=".presentation.auth.register.RegisterEmailVerificationFragment">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_back_before"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            app:tint="?attr/colorOnSurface" />
    </LinearLayout>

    <!--  Scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextAppearance.SettleX.Headline.Large"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/title_email_verification"
                    android:textColor="?attr/colorOnSurface" />

                <!-- Step progress -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progress_circle"
                        style="@style/Widget.SettleX.StepProgressIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:progress="2" />

                    <TextView
                        android:id="@+id/progress_text"
                        style="@style/TextAppearance.SettleX.Body1.Normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/tv_step_2_of_4"
                        android:textColor="?attr/colorOnSurface" />
                </FrameLayout>
            </LinearLayout>

            <TextView
                style="@style/TextAppearance.SettleX.Body1.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="@string/subtitle_check_your_email_inbox"
                android:textColor="?attr/colorOnSurface" />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/img_email_sent" />

            <TextView
                android:id="@+id/tv_user_email"
                style="@style/TextAppearance.SettleX.Body1.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="15dp"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                tools:text="We sent a verification code to your email example@gmail.com. This code will expire after 10 minutes" />

            <TextView
                style="@style/TextAppearance.SettleX.Body1.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:text="@string/label_enter_6_digit_code"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_otp_code"
                style="@style/Widget.SettleX.TextInputEditText.Outlined"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_input_field_outlined"
                android:hint="@string/tv_verification_code"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="6"
                android:paddingHorizontal="15dp" />

            <TextView
                android:id="@+id/tv_error"
                style="@style/TextAppearance.SettleX.Body1.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:textColor="?attr/colorError"
                android:visibility="gone"
                tools:text="error message" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextAppearance.SettleX.Body1.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_didnt_receive_the_code"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/tv_resend_code"
                    style="@style/TextAppearance.SettleX.Body1.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:text="@string/tv_resend_code"
                    android:textColor="?attr/colorPrimary" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_spam_info"
                style="@style/TextAppearance.SettleX.Body1.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_warning_container_rounded8"
                android:drawableStart="@drawable/ic_info_outline"
                android:drawablePadding="5dp"
                android:drawableTint="?attr/colorWarning"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:text="Spam info"
                android:textColor="?attr/colorOnWarningContainer" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_continue"
        style="@style/Widget.SettleX.Button.Primary.Rounded8"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="25dp"
        android:enabled="false"
        android:text="@string/btn_continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>